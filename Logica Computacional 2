programa {
  funcao inicio() {
     escreva ("Escolha uma opção: 1 Abrir Netflix - 2 Abrir Amazon Prime - 3 Abrir HBO GO - 4 Sair ")
    inteiro menu = 0
    escreva("\n" + "Digite sua opção: ")
    leia(menu)

    escolha (menu)
{
caso 1: // testa se valor é igual a 1
escreva("Ok! Abrir Netflix!")
pare
caso 2: // testa se valor é igual a 2
escreva("Ok! Abrir Amazon Prime!")
pare
caso 3: // testa se valor é igual a 3
escreva("Ok! Abrir HBO GO!")
pare
caso 4: // testa se valor é igual a 4
escreva("Ok! Saindo do Menu")
pare

caso contrario: //testa caso valor seja 0
escreva("Você deve escolher as opções: 1, 2, 3 ou 4")
}
}
